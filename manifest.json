{
  "manifest_version": 3,
  "name": "Tab Refresh",
  "version": "1.0",
  "description": "A Chrome extension that keeps your web sessions active by preventing automatic refreshes on sites that require user interaction.",
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
    "service_worker": "/src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
